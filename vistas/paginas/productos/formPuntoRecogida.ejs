<section>
    <h2>Seleccionar Punto de Recogida</h2>
    <div class="pickup-form-container">
        <form action="/productos/guardarPuntoRecogida" method="POST">
            <p>
                <label for="punto">Punto de Recogida: </label>
                <select id="punto" name="punto" required>
                    <option value="" disabled selected>Selecciona un punto de recogida</option>
                    <option value="punto1">Punto 1 - Calle Principal 123</option>
                    <option value="punto2">Punto 2 - Avenida Secundaria 456</option>
                    <option value="punto3">Punto 3 - Plaza Central 789</option>
                </select>
            </p>
         
            <input type="hidden" id="user_id" name="user_id" value="<%= session.user_id %>">
            <p>
                <button type="submit">Guardar Punto de Recogida</button>
            </p>
        </form>
    </div>
</section>