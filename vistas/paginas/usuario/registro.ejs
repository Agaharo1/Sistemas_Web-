<section>
    <h2>Registro</h2>
    <div class="Registro-container">
        <form action="/usuarios/registro" method="POST">
            <% if (locals.error) { %>
                <p><strong><%= locals.error %></strong></p>
            <% } %>
            <div>
                <label for="usuario">Nombre: </label>
                <input type="text" name="nombre" value="<%= datos.nombre %>" />
                <%- helpers.error(errores, 'nombre') %>
            </div>

            <div>
                <label>Correo:</label>
                <input type="email" name="username" value="<%= datos.username %>" />
                <%- helpers.error(errores, 'username') %>
            </div>

            <div>
                <label for="contraseña">Contraseña: </label>
                <input type="password" name="password" />
                <%- helpers.error(errores, 'password') %>
            </div>

            <div>
                <label>Repetir contraseña:</label>
                <input type="password" name="passwordConfirmacion" />
                <%- helpers.error(errores, 'passwordConfirmacion') %>
            </div>

            <div>
                <button type="submit">Enviar</button>
            </div>
        </form>
    </div>
</section>
