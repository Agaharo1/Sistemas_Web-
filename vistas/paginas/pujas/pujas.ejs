<h2>Todas las Pujas</h2>

<% if (!pujas || pujas.length === 0) { %>
  <p>No hay pujas registradas.</p>
<% } else { %>
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>ID Producto</th>
        <th>ID Usuario</th>
        <th>Valor Máximo</th>
        <th>Ganador</th>
        <th>Ver</th>
      </tr>
    </thead>
    <tbody>
      <% pujas.forEach(puja => { %>
        <tr>
          <td><%= puja.id %></td>
          <td><%= puja.id_p %></td>
          <td><%= puja.id_u %></td>
          <td><%= puja.valor_max %> €</td>
          <td><%= puja.id_ganador ?? 'Pendiente' %></td>
          <td><a href="/puja/<%= puja.id %>">Ver</a></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
<% } %>
