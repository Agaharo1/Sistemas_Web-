<div class="puja-container">
    <div class="product-info">
        <img src="/imagenes/imagen/<%= productId %>/<%= imagenes %>" alt="Imagen del Producto" class="product-image-circle">
        <h3>Producto: <%= productName %></h3>
    </div>
    <h2>Puja de <%= usuario %></h2>
    <div class="pujadas">
        <% pujadas.forEach(pujada => { %>
            <div class="pujada <%= pujada.id_u === session.user_id ? 'mi-puja' : '' %>">
                <p><%= pujada.valor %></p>
            </div>
        <% }); %>
    </div>
    <form action="/pujas/pujar" method="POST" class="pujada-form">
        <input type="hidden" name="id_puja" value="<%= puja.id %>">
        <input type="hidden" name="id_u" value="<%= session.user_id %>">
        <textarea name="pujada" placeholder="Escribe tu puja aquÃ­..." required></textarea>
        <button type="submit">Enviar</button>
    </form>
    
</div>
