<section class="formulario-section">
    <h2>Añadir Dirección de Envío</h2>
    <div class="formulario-container">
        <form action="/envios/formEnvioProducto/<%= producto.id %>" method="POST">
            <input type="hidden" name="productoId" value="<%= producto.id %>">
            <input type="hidden" name="punto_recogida" value="0">
            <p>
                <label for="nombre">Nombre: </label>
                <input type="text" id="nombre" name="nombre" placeholder="Nombre completo" required>
            </p>
            <p>
                <label for="direccion">Dirección: </label>
                <input type="text" id="direccion" name="direccion_entrega" placeholder="Dirección completa" required>
            </p>
            <p>
                <label for="codigo_postal">Código Postal: </label>
                <input type="text" id="codigo_postal" name="codigo_postal" placeholder="Código postal" required>
            </p>
            <p>
                <label for="telefono">Teléfono: </label>
                <input type="tel" id="telefono" name="telefono" placeholder="Número de teléfono" required>
            </p>
            <p>
                <label for="dni">DNI: </label>
                <input type="text" id="dni" name="dni" placeholder="Documento de identidad" required>
            </p>
            <input type="hidden" id="user_id" name="user_id" value="<%= session.user_id %>">
            <p style="text-align: center;">
                <button type="submit">Guardar Dirección</button>
            </p>
        </form>
    </div>
</section>