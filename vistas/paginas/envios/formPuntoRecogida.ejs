<div id="mercado">
    <h2>Puntos de Recogida</h2>

    <form action="/envios/formPuntoRecogida/<%= producto.id %>" method="POST">
        <input type="hidden" name="productoId" value="<%= producto.id %>">
        <ul>
            <% if (puntoRecogida.length > 0) { %>
                <% puntoRecogida.forEach(punto => { %>
                    <li>
                        <label>
                            <input type="radio" name="puntoId" value="<%= punto.id %>" required>
                            <strong>Provincia:</strong> <%= punto.provincia %> - 
                            <strong>Direcci√≥n:</strong> <%= punto.direccion %>
                        </label>
                    </li>
                <% }) %>
            <% } else { %>
                <li>No hay puntos de recogida disponibles.</li>
            <% } %>
        </ul>
        <button type="submit">Seleccionar Punto de Recogida</button>
    </form>
</div>