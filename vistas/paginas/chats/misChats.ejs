<% function mostrarChats(chats) { %>
    <div class="chat-list">
        <% if (chats && chats.length > 0) { %>
            <% chats.forEach(chat => { %>
                <a href="/chats/chat/<%= chat.chatId %>" class="chat-item">
                    <div class="chat-info">
                        <div class="chat-left">
                            <img src="/imagenes/imagen/<%= chat.producto %>/<%= chat.imagen %>" alt="Imagen del producto" class="product-image-circle">
                            <h4><%= chat.nombre %></h4>
                        </div>
                        <p class="chat-last-message"><%= chat.lastMensaje %></p>
                    </div>
                </a>
            <% }); %>
        <% } else { %>
            <p>No tienes chats disponibles.</p>
        <% } %>
    </div>
<% } %>



<% mostrarChats(chats); %>